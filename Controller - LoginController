package Controller;

import Bo.FuncionarioBO;

public class LoginController {
	
	    private FuncionarioBO funcionarioBO;
		private FuncionarioBO funcionario2;

	    public LoginController (FuncionarioBO funcionarioBO) {
	        this.funcionarioBO = funcionarioBO;
	    }

	    public boolean realizarLogin(String email, String senha) {
	        FuncionarioBO funcionarioBO = new FuncionarioBO();  // Crie uma instância de FuncionarioBO

	        FuncionarioBO funcionario = funcionarioBO.obterFuncionarioPorEmail("pietra@gmail.com");
	        if (funcionario != null && funcionario.getSenha().equals("pietra")) {
	            return true; // Login bem-sucedido
	        }

	        FuncionarioBO funcionario2 = funcionarioBO.obterFuncionarioPorEmail("fernanda@gmail.com");
	        if (funcionario2 != null && funcionario2.getSenha().equals("fernanda")) {
	            return true; // Login bem-sucedido
	        }

	        FuncionarioBO funcionario3 = funcionarioBO.obterFuncionarioPorEmail("lucas@gmail.com");
	        if (funcionario3 != null && funcionario3.getSenha().equals("lucas")) {
	            return true; // Login bem-sucedido
	        }

	        FuncionarioBO funcionario4 = funcionarioBO.obterFuncionarioPorEmail("julia@gmail.com");
	        if (funcionario4 != null && funcionario4.getSenha().equals("julia")) {
	            return true; // Login bem-sucedido
	        }

	        FuncionarioBO funcionario5 = funcionarioBO.obterFuncionarioPorEmail("rafaela@gmail.com");
	        if (funcionario5 != null && funcionario5.getSenha().equals("rafaela")) {
	            return true; // Login bem-sucedido
	        }

	        return false; // Credenciais inválidas
	    }

	    private boolean verificarCredenciais(String email, String senha) {
        	
            if (email.equals("pietra@gmail.com") && senha.equals("pietra"))
            if (email.equals("fernanda@gmail.com") && senha.equals("fernanda"))
            if (email.equals("lucas@gmail.com") && senha.equals("lucas"))
            if (email.equals("julia@gmail.com") && senha.equals("julia"))
            if (email.equals("rafaela@gmail.com") && senha.equals("rafaela")){
            return true;
            }
            
            return false;
        }

	}

