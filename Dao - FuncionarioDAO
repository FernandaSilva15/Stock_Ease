package Dao;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import Model.FuncionarioVO;

public class FuncionarioDAO {
	private static final String URL = "jdbc:mysql://localhost:3306/CadastroFC";
    private static final String USER = "root";
    private static final String PASSWORD = "root";
    

    public void cadastrar(FuncionarioVO func) throws SQLException {
    	
    	Connection conexao= null;
    	conexao = DriverManager.getConnection(URL, USER, PASSWORD); 
    		String sql = "INSERT INTO FuncionarioDAO (nome, celular, email, senha, data_nascimento, genero) VALUES (?, ?, ?, ?, ?, ?)";
try {
	PreparedStatement statement = conexao.prepareStatement(sql);
	statement.setString(1, func.getNomeCompleto());
	statement.setString(2, func.getCelular());
	statement.setString(3, func.getEmail());
	statement.setString(4, func.getSenha());
	statement.setString(5, func.getDataNascimento());
	statement.setString(6, func.getGenero());
	statement.execute();
	//statement.executeUpdate();
}catch(SQLException e) {
	e.printStackTrace();
}



// Outros métodos para consultas e interações com o banco de dados podem ser adicionados aqui
}

}
