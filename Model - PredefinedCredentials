package Model;

import java.util.HashMap;
import java.util.Map;

public class PredefinedCredentials {
    private Map<String, String> credentials;

    public PredefinedCredentials() {
        credentials = new HashMap<>();
        // Adicione as credenciais predefinidas aqui
        credentials.put("fernanda1@gmail.com", "fernanda");
       credentials.put("pietra@gmail.com", "pietra");
        credentials.put("lucas@gmail.com", "lucas");
    }

    public boolean verifyCredentials(String email, String password) {
        String storedPassword = credentials.get(email);
        return storedPassword != null && storedPassword.equals(password);
    }

    public static void main(String[] args) {
        PredefinedCredentials predefinedCredentials = new PredefinedCredentials();
        String email = "";
        String password = "";

        if (email.equals("pietra@gmail.com") || email.equals("fernanda1@gmail.com") || email.equals("lucas@gmail.com") ||
            email.equals("julia@gmail.com") || email.equals("rafaela@gmail.com")) {
            if (password.equals("pietra") || password.equals("fernanda") || password.equals("lucas") ||
                password.equals("julia") || password.equals("rafaela")) {
                if (predefinedCredentials.verifyCredentials(email, password)) {
                    System.out.println("Login successful!");
                } else {
                    System.out.println("Login failed. Check your credentials.");
                }
            } else {
                System.out.println("Invalid password.");
            }
        } else {
            System.out.println("Invalid email.");
        }
    }
    }
