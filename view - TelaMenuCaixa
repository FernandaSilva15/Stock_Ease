package view;
import java.awt.*;
import javax.swing.*;
import java.awt.event.*;
public class TelaMenuCaixa extends JFrame {
	Color rosa_claro = new Color(221, 160, 221);
	Color roxo_escuro = new Color(153, 50, 204); 
	Color branco = new Color(255, 255, 255);
	private Container contentPane;
	private JLayeredPane lp;
	private JButton btnPedidos;
	private JButton btnPesquisa;
	private JButton btnClientes;

	public TelaMenuCaixa() {
		JMenuBar menubar = new JMenuBar();
		setJMenuBar(menubar);
		inicializarComponentes();
		definirEventos();
	}
	private void inicializarComponentes() {
		Toolkit toolkit = Toolkit.getDefaultToolkit();
		Dimension screenSize = toolkit.getScreenSize();
		setBounds(0, 0, screenSize.width, screenSize.height-40);
		contentPane=getContentPane();
		contentPane.setBackground(rosa_claro);
		
		lp= new JLayeredPane();
		btnPedidos = new JButton("Pedidos");
		btnPesquisa = new JButton("Pesquisa");
		btnClientes = new JButton("Clientes");
		
		btnPedidos.setForeground(branco);
		btnPedidos.setBackground(roxo_escuro);
		btnClientes.setForeground(roxo_escuro);
		btnClientes.setBackground(branco);
		btnPesquisa.setForeground(branco);
		btnPesquisa.setBackground(roxo_escuro);
		
		Font fonteAria =new Font("Arial",Font.BOLD, 60);
		btnPesquisa.setFont(fonteAria);
		btnPedidos.setFont(fonteAria);
		btnClientes.setFont(fonteAria);
		
		btnPedidos.setBounds(400, 500, 400, 100);
		btnPesquisa.setBounds(1100, 500, 400, 100);
		btnClientes.setBounds(810, 700, 400, 100);
		//adiciona
		contentPane.add(lp);
		
		lp.add(btnPesquisa,new Integer(1));
		lp.add(btnPedidos, new Integer(2));
		lp.add(btnClientes, new Integer(3));
		
		setVisible(true);


		
}
	private void definirEventos() {
		btnPesquisa.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				TelaPesquisa p = new TelaPesquisa();
				contentPane.removeAll();
				contentPane.add(p);
				contentPane.validate();
			}
			
			
		});
		
		btnPedidos.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				TelaPedidos p1 = new TelaPedidos();
				contentPane.removeAll();
				contentPane.add(p1);
				contentPane.validate();
			}
			
			
		});
		
		btnClientes.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				TelaClientes c = new TelaClientes();
				contentPane.removeAll();
				contentPane.add(c);
				contentPane.validate();
			}
			
			
		});
		
	}
	
}
