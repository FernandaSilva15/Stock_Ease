    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        this.dispose();
        new FrmMenuVendas().setVisible(true);
    }                                        

    private void TXTPESQUISAPRODUTOSActionPerformed(java.awt.event.ActionEvent evt) {                                                    
        String nome = "%" + txtDescricao.getText() + "%";

        ProdutosDAO dao = new ProdutosDAO();
        List<Produtos> lista = dao.listarPorNome(nome);
        DefaultTableModel dados = (DefaultTableModel) tabelaProdutosLista.getModel();
        dados.setNumRows(0);
        for (Produtos c : lista) {
            dados.addRow(new Object[]{
                c.getId(),
                c.getDescricao(),
                c.getPreco(),
                c.getQtd_estoque(),
                c.getFornecedor().getNome(),
                c.getCategoria()
            });
        }

    }                                                   

    private void tabelaProdutosListaMouseClicked(java.awt.event.MouseEvent evt) {                                                 
        idproduto = Integer.parseInt(tabelaProdutosLista.getValueAt(tabelaProdutosLista.getSelectedRow(), 0).toString());
        txtDescricao.setText(tabelaProdutosLista.getValueAt(tabelaProdutosLista.getSelectedRow(), 1).toString());
        txtEstoqueAtual.setText(tabelaProdutosLista.getValueAt(tabelaProdutosLista.getSelectedRow(), 3).toString());
    }                                                

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            int qtd_estoque, qtd;
            qtd_estoque = Integer.parseInt(txtEstoqueAtual.getText());

            qtd = Integer.parseInt(txtqtd.getText());

            qtd_nova = qtd_estoque + qtd;

            ProdutosDAO dao = new ProdutosDAO();
            dao.AddEstoque(idproduto, qtd_nova);

            JOptionPane.showMessageDialog(null, "Produto Atualizado");
             new Utilitarios().LimpaTela(jPanel2);

        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, "Informe a nova quantidade ou selecione um produto");
             new Utilitarios().LimpaTela(jPanel2);
        }
    }                                        

    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        this.dispose();
        new FrmMenuPrincipal().setVisible(true);
    }                                        

