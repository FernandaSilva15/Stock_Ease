    private void bnthostoricoActionPerformed(java.awt.event.ActionEvent evt) {                                             
        this.dispose();
        new FrmHistoricoVendas().setVisible(true);
    }                                            

    private void formWindowActivated(java.awt.event.WindowEvent evt) {                                     
        //maximizar frame
        this.setExtendedState(this.MAXIMIZED_BOTH);
    }                                    

    private void btnpdvActionPerformed(java.awt.event.ActionEvent evt) {                                       
        this.dispose();
        new FrmVendas().setVisible(true);
    }                                      

    private void btncontroleActionPerformed(java.awt.event.ActionEvent evt) {                                            
this.dispose();
new FrmControleEstoque().setVisible(true);
    }                                           

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        this.dispose();
        new FrmMenuPrincipal().setVisible(true);
    }                                        

