    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        double totalvenda = Double.parseDouble(txttotal.getText());
        double pcartao = Double.parseDouble(txtcartao.getText());
        double pcheque = Double.parseDouble(txtcheque.getText());
        double pdinheiro = Double.parseDouble(txtdinheiro.getText());
        double totalpago = pcartao + pcheque + pdinheiro;
        double troco = totalpago - totalvenda;
        txttroco.setText(String.valueOf(troco));

        double desconto = 0.0; // Inicialmente, nenhum desconto é aplicado

        // Aqui você pode definir a lógica para escolher o desconto
        // Por exemplo, se o desconto for de 5%, defina desconto para descontocinco:
        // desconto = descontocinco;
        if (totalvenda >= 150) {
            desconto = descontocinco;
        } else if (totalvenda >= 200) {
            desconto = descontodez;
        } else if (totalvenda >=250) {
            desconto = descontoquize;
        } else if (totalvenda >= 300) {
            desconto = descontovinte;
        }

        // Aplicar desconto, se houver
        if (desconto > 0) {
            totalvenda -= (totalvenda * desconto);
        }

        // Restante do código para registrar a venda, etc.
        // Cálculo do troco
        troco = totalpago - totalvenda;
        txttroco.setText(String.valueOf(troco));

        vendas objv = new vendas();
        //dados do cliente id e funcionario id
        if (cliente != null) {
            objv.setCliente(cliente);
        }
        objv.setFuncionario(funcionario);

        //carrega a data atual do sistema
        Date agora = new Date();
        SimpleDateFormat dataEUA = new SimpleDateFormat("yyyy-MM-dd");//CLASSE QUE TRANSFORMA A DATA PARA O FORMATO BRASILEIRO
        String datamysql = dataEUA.format(agora);
        objv.setData_venda(datamysql);
        //TOTAL DA VENDA e obs
        objv.setTotal_venda(totalvenda);
        objv.setObs(txtobs.getText());

        VendasDAO dao_v = new VendasDAO();
        dao_v.cadastrarvenda(objv);

        //retornar
        objv.setId(dao_v.retornaUltimaVenda());

        //cadastrando os produtos na tabela itens vendas
        for (int i = 0; i < carrinho.getRowCount(); i++) {

            int qtd_estoque, qtd_comprada, qtd_atualizada;
            Produtos objp = new Produtos();
            ProdutosDAO dao_produto = new ProdutosDAO();
            ItensVendas item = new ItensVendas();
            item.setVenda(objv);
            objp.setId(Integer.parseInt(carrinho.getValueAt(i, 0).toString()));
            item.setProduto(objp);
            item.setQtd(Integer.parseInt(carrinho.getValueAt(i, 2).toString()));
            item.setSubtotal(Double.parseDouble(carrinho.getValueAt(i, 4).toString()));

            //baixa de estoque
            qtd_estoque = dao_produto.retornaEstoqueAtual(objp.getId());
            qtd_comprada = (Integer.parseInt(carrinho.getValueAt(i, 2).toString()));
            qtd_atualizada = qtd_estoque - qtd_comprada;

            dao_produto.baixarEstoque(objp.getId(), qtd_atualizada);

            itemVendaDAO daoitem = new itemVendaDAO();
            daoitem.cadastraItem(item);
        }
        /**
        * *******************************
        */
        JOptionPane.showMessageDialog(null, "Venda Registrada com sucesso");
        new Utilitarios().LimpaTela(Pagamento);
        new Utilitarios().LimpaTela(Desconto);
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        this.dispose();
        new FrmMenuVendas().setVisible(true);
    }                                        

    private void BtnCancelarMouseClicked(java.awt.event.MouseEvent evt) {                                         
        String chaveAcesso = JOptionPane.showInputDialog(null, "Digite a chave de acesso do administrador:");

        // neste campo adicionar uma chave de administrador
        String chaveAdmin = "0000";
        if (chaveAcesso != null && chaveAcesso.equals(chaveAdmin)) {
            int op = JOptionPane.showConfirmDialog(null, "Deseja realmente cancelar esse pagamento?");
            if (op == 0) {
                new Utilitarios().LimpaTela(Pagamento);
                new Utilitarios().LimpaTela(Desconto);
            }
        } else {
            JOptionPane.showMessageDialog(null, "Chave de acesso incorreta. Cancelamento não autorizado.");
        }
    }                                        

