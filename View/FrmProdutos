    private void txtDescricaoActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
    }                                            

    private void btnEXCLUIRActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // botao excluir

        Clientes obj = new Clientes();

        obj.setId(Integer.parseInt(txtCodigo.getText()));
        ClientesDAO dao = new ClientesDAO();
        dao.excluirCliete(obj);
        new Utilitarios().LimpaTela(painel_dados);

    }                                          

    private void btnSALVARActionPerformed(java.awt.event.ActionEvent evt) {                                          
//BOTAO SALVAR

        Produtos obj = new Produtos();

        obj.setDescricao(txtDescricao.getText());
        obj.setPreco(Double.parseDouble(txtPreco.getText()));
        obj.setQtd_estoque(Integer.parseInt(txtqtdEstoque.getText()));

// Cria um objeto de fornecedor
        Fornecedores f = (Fornecedores) BoxFornecedores.getSelectedItem();
        obj.setFornecedor(f);

        ProdutosDAO dao = new ProdutosDAO();
        dao.cadastrarProdutos(obj);

        new Utilitarios().LimpaTela(painel_dados);


    }                                         

    private void btnEDITARActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // Botao editar
        Clientes obj = new Clientes();

        obj.setNome(txtDescricao.getText());
        obj.setRg(txtRg.getText());
        obj.setCpf(txtCpf.getText());
        obj.setEmail(txtqtdEstoque.getText());
        obj.setTelefone(txtTelefone.getText());
        obj.setCelular(txtCelular.getText());
        obj.setCep(txtCep.getText());
        obj.setEndereco(txtEndereco.getText());
        obj.setNumero(Integer.parseInt(txtNumero.getText()));
        obj.setComplemto(txtComplemeto.getText());
        obj.setBairro(txtBairro.getText());
        obj.setCidade(txtCidade.getText());
        obj.setUf(BoxFornecedores.getSelectedItem().toString());
        //parei aqui ATENÇÃO PIETRAAA PARAMOS AQUI AS 17: 11 DON 07/09/23

        obj.setId(Integer.parseInt(txtCodigo.getText()));
        ClientesDAO dao = new ClientesDAO();
        dao.alterarCliete(obj);

        new Utilitarios().LimpaTela(painel_dados);

    }                                         

    private void formWindowActivated(java.awt.event.WindowEvent evt) {                                     
        // Carrega a lista 
        listar();

    }                                    

    private void TabelaProdutosMouseClicked(java.awt.event.MouseEvent evt) {                                            
        // pega os dados 
        jTabbedPane3.setSelectedIndex(0);

        txtCodigo.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 0).toString());
        txtDescricao.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 1).toString());
        txtRg.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 2).toString());
        txtCpf.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 3).toString());
        txtqtdEstoque.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 4).toString());
        txtTelefone.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 5).toString());
        txtCelular.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 6).toString());
        txtCep.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 7).toString());
        txtEndereco.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 8).toString());
        txtNumero.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 9).toString());
        txtComplemeto.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 10).toString());
        txtBairro.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 11).toString());
        txtCidade.setText(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 12).toString());
        BoxFornecedores.setSelectedItem(TabelaProdutos.getValueAt(TabelaProdutos.getSelectedRow(), 13).toString());

    }                                           

    private void BtnPesquisarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // botao pesquisar
        String nome = "%" + txtPesquisa.getText() + "%";

        ClientesDAO dao = new ClientesDAO();
        List<Clientes> lista = dao.BuscaClientesPorNome(nome);
        DefaultTableModel dados = (DefaultTableModel) TabelaProdutos.getModel();
        dados.setNumRows(0);
        for (Clientes c : lista) {
            dados.addRow(new Object[]{
                c.getId(),
                c.getNome(),
                c.getRg(),
                c.getCpf(),
                c.getEmail(),
                c.getTelefone(),
                c.getCelular(),
                c.getCep(),
                c.getEndereco(),
                c.getNumero(),
                c.getComplemto(),
                c.getBairro(),
                c.getCidade(),
                c.getUf()

            });
        }


    }                                            

    private void txtPesquisaActionPerformed(java.awt.event.ActionEvent evt) {                                            

    }                                           

    private void txtPesquisaKeyPressed(java.awt.event.KeyEvent evt) {                                       
        String nome = "%" + txtPesquisa.getText() + "%";

        ClientesDAO dao = new ClientesDAO();
        List<Clientes> lista = dao.BuscaClientesPorNome(nome);
        DefaultTableModel dados = (DefaultTableModel) TabelaProdutos.getModel();
        dados.setNumRows(0);
        for (Clientes c : lista) {
            dados.addRow(new Object[]{
                c.getId(),
                c.getNome(),
                c.getRg(),
                c.getCpf(),
                c.getEmail(),
                c.getTelefone(),
                c.getCelular(),
                c.getCep(),
                c.getEndereco(),
                c.getNumero(),
                c.getComplemto(),
                c.getBairro(),
                c.getCidade(),
                c.getUf()

            });
        }
    }                                      

    private void BtnBuscaActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // botao pesquisar cliente por nome 

        String nome = txtDescricao.getText();
        Clientes obj = new Clientes();
        ClientesDAO dao = new ClientesDAO();

        obj = dao.consultaClientePorNome(nome);
        //exibir os dados obj nos campos de texto
        if (obj.getNome() != null) {

            txtCodigo.setText(String.valueOf(obj.getId()));
            txtDescricao.setText((obj.getNome()));
            txtRg.setText((obj.getRg()));
            txtCpf.setText((obj.getCpf()));
            txtqtdEstoque.setText((obj.getEmail()));
            txtTelefone.setText((obj.getTelefone()));
            txtCelular.setText((obj.getCelular()));
            txtCep.setText((obj.getCep()));
            txtEndereco.setText((obj.getEndereco()));
            txtNumero.setText(String.valueOf(obj.getNumero()));
            txtComplemeto.setText((obj.getComplemto()));
            txtBairro.setText((obj.getBairro()));
            txtCidade.setText((obj.getCidade()));
            BoxFornecedores.setSelectedItem((obj.getUf()));
        } else {
            JOptionPane.showMessageDialog(null, "Cliente não encontrado !! ");

        }


    }                                        

    private void btnNOVOActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // botao novo
        new Utilitarios().LimpaTela(painel_dados);
    }                                       

    private void BoxFornecedoresAncestorAdded(javax.swing.event.AncestorEvent evt) {                                              
        // carrega boxFornecedores
        FornecedoresDAO dao = new FornecedoresDAO();
        List<Fornecedores> lista = dao.listarFornecedores();
        BoxFornecedores.removeAll();
        for (Fornecedores f : lista) {
            BoxFornecedores.addItem(f);
        }
    }                                             

