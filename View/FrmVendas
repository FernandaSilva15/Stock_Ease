    private void btncancelarMouseClicked(java.awt.event.MouseEvent evt) {                                         

        String chaveAcesso = JOptionPane.showInputDialog(null, "Digite a chave de acesso do administrador:");

        // neste campo adicionar uma chave de administrador
        String chaveAdmin = "0000";

        if (chaveAcesso != null && chaveAcesso.equals(chaveAdmin)) {
            int op = JOptionPane.showConfirmDialog(null, "Deseja realmente cancelar essa compra?");
            if (op == 0) {
                new Utilitarios().LimpaTela(dadoscliente);
                new Utilitarios().LimpaTela(dadosfuncinario);
                new Utilitarios().LimpaTela(dadosproduto);
                new Utilitarios().limparTabela(TabelaItens);
                new Utilitarios().LimpaTela(dadostotal);
            }
        } else {
            JOptionPane.showMessageDialog(null, "Chave de acesso incorreta. Cancelamento não autorizado.");
        }


    }                                        
 private void atualizarValorTotalCompra(double total) {

        txttotal.setText(String.format("%.2f", total)); // Formata o valor para duas casas decimais
    }

    private double obterValorTotalCompra() {
        DefaultTableModel model = (DefaultTableModel) TabelaItens.getModel();
        double total = 0.0;

        for (int row = 0; row < model.getRowCount(); row++) {
          
            double subtotal = (double) model.getValueAt(row,4);
            total += subtotal;
        }

        return total;
    }
    private void btncancelar1MouseClicked(java.awt.event.MouseEvent evt) {                                          
        String chaveAcesso = JOptionPane.showInputDialog(null, "Digite a chave de acesso do administrador:");

        String chaveAdmin = "0000";

        if (chaveAcesso != null && chaveAcesso.equals(chaveAdmin)) {
            DefaultTableModel model = (DefaultTableModel) TabelaItens.getModel();
            int selectedRow = TabelaItens.getSelectedRow();

            if (selectedRow != -1) {
              
                double subtotal= (double) model.getValueAt(selectedRow, 4);

                // Remove a linha selecionada do modelo da tabela
                model.removeRow(selectedRow);

               
                double total = obterValorTotalCompra(); 

                // Atualize o valor total da compra na interface do usuário (onde quer que seja exibido)
                atualizarValorTotalCompra(total);
            } else {
                JOptionPane.showMessageDialog(null, "Selecione um item para remover do carrinho.");
            }
        } else {
            JOptionPane.showMessageDialog(null, "Chave de acesso incorreta. Remoção não autorizada.");
        }


    }                                         

