    private void btnEXCLUIRActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // botao excluir

        Clientes obj = new Clientes();

        obj.setId(Integer.parseInt(txtCodigo.getText()));
        ClientesDAO dao = new ClientesDAO();
        dao.excluirCliete(obj);
        new Utilitarios().LimpaTela(painel_dados);

    }                                          

    private void btnSALVARActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // botao salvar

        Clientes obj = new Clientes();
        obj.setNome(txtNome.getText());
        obj.setRg(txtRg.getText());
        obj.setCpf(txtCpf.getText());
        obj.setEmail(txtEmail.getText());
        obj.setTelefone(txtTelefone.getText());
        obj.setCelular(txtCelular.getText());
        obj.setCep(txtCep.getText());
        obj.setEndereco(txtEndereco.getText());
        obj.setNumero(Integer.parseInt(txtNumero.getText()));
        obj.setComplemto(txtComplemeto.getText());
        obj.setBairro(txtBairro.getText());
        obj.setCidade(txtCidade.getText());
        obj.setUf(BoxUf.getSelectedItem().toString());
        //parei aqui ATENÇÃO PIETRAAA PARAMOS AQUI AS 17: 11 DON 07/09/23

        ClientesDAO dao = new ClientesDAO();
        dao.cadastrarCliete(obj);
        new Utilitarios().LimpaTela(painel_dados);

    }                                         

    private void btnEDITARActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // Botao editar
        Clientes obj = new Clientes();

        obj.setNome(txtNome.getText());
        obj.setRg(txtRg.getText());
        obj.setCpf(txtCpf.getText());
        obj.setEmail(txtEmail.getText());
        obj.setTelefone(txtTelefone.getText());
        obj.setCelular(txtCelular.getText());
        obj.setCep(txtCep.getText());
        obj.setEndereco(txtEndereco.getText());
        obj.setNumero(Integer.parseInt(txtNumero.getText()));
        obj.setComplemto(txtComplemeto.getText());
        obj.setBairro(txtBairro.getText());
        obj.setCidade(txtCidade.getText());
        obj.setUf(BoxUf.getSelectedItem().toString());
        //parei aqui ATENÇÃO PIETRAAA PARAMOS AQUI AS 17: 11 DON 07/09/23

        obj.setId(Integer.parseInt(txtCodigo.getText()));
        ClientesDAO dao = new ClientesDAO();
        dao.alterarCliete(obj);

        new Utilitarios().LimpaTela(painel_dados);

    }                                         

    private void formWindowActivated(java.awt.event.WindowEvent evt) {                                     
        // Carrega a lista 
        listar();

    }                                    

    private void TabelaClientesMouseClicked(java.awt.event.MouseEvent evt) {                                            
        // pega os dados 
        jTabbedPane3.setSelectedIndex(0);

        txtCodigo.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 0).toString());
        txtNome.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 1).toString());
        txtRg.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 2).toString());
        txtCpf.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 3).toString());
        txtEmail.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 4).toString());
        txtTelefone.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 5).toString());
        txtCelular.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 6).toString());
        txtCep.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 7).toString());
        txtEndereco.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 8).toString());
        txtNumero.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 9).toString());
        txtComplemeto.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 10).toString());
        txtBairro.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 11).toString());
        txtCidade.setText(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 12).toString());
        BoxUf.setSelectedItem(TabelaClientes.getValueAt(TabelaClientes.getSelectedRow(), 13).toString());

    }                                           

    private void BtnPesquisarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // botao pesquisar
        String nome = "%" + txtPesquisa.getText() + "%";

        ClientesDAO dao = new ClientesDAO();
        List<Clientes> lista = dao.BuscaClientesPorNome(nome);
        DefaultTableModel dados = (DefaultTableModel) TabelaClientes.getModel();
        dados.setNumRows(0);
        for (Clientes c : lista) {
            dados.addRow(new Object[]{
                c.getId(),
                c.getNome(),
                c.getRg(),
                c.getCpf(),
                c.getEmail(),
                c.getTelefone(),
                c.getCelular(),
                c.getCep(),
                c.getEndereco(),
                c.getNumero(),
                c.getComplemto(),
                c.getBairro(),
                c.getCidade(),
                c.getUf()

            });
        }


    }                                            

    private void txtPesquisaActionPerformed(java.awt.event.ActionEvent evt) {                                            

    }                                           

    private void txtCepKeyPressed(java.awt.event.KeyEvent evt) {                                  

        //Programacao do keypress
        if (evt.getKeyCode() == KeyEvent.VK_ENTER) {
            Clientes obj = new Clientes();
            ClientesDAO dao = new ClientesDAO();
            obj = dao.buscaCep(txtCep.getText());

            txtEndereco.setText(obj.getEndereco());
            txtBairro.setText(obj.getBairro());
            txtCidade.setText(obj.getCidade());
            BoxUf.setSelectedItem(obj.getUf());

        }
    }                                 

    private void txtPesquisaKeyPressed(java.awt.event.KeyEvent evt) {                                       
        String nome = "%" + txtPesquisa.getText() + "%";

        ClientesDAO dao = new ClientesDAO();
        List<Clientes> lista = dao.BuscaClientesPorNome(nome);
        DefaultTableModel dados = (DefaultTableModel) TabelaClientes.getModel();
        dados.setNumRows(0);
        for (Clientes c : lista) {
            dados.addRow(new Object[]{
                c.getId(),
                c.getNome(),
                c.getRg(),
                c.getCpf(),
                c.getEmail(),
                c.getTelefone(),
                c.getCelular(),
                c.getCep(),
                c.getEndereco(),
                c.getNumero(),
                c.getComplemto(),
                c.getBairro(),
                c.getCidade(),
                c.getUf()

            });
        }
    }                                      

    private void BtnBuscaActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // botao pesquisar cliente por nome 

        String nome = txtNome.getText();
        Clientes obj = new Clientes();
        ClientesDAO dao = new ClientesDAO();

        obj = dao.consultaClientePorNome(nome);
        //exibir os dados obj nos campos de texto
        if (obj.getNome() != null) {

            txtCodigo.setText(String.valueOf(obj.getId()));
            txtNome.setText((obj.getNome()));
            txtRg.setText((obj.getRg()));
            txtCpf.setText((obj.getCpf()));
            txtEmail.setText((obj.getEmail()));
            txtTelefone.setText((obj.getTelefone()));
            txtCelular.setText((obj.getCelular()));
            txtCep.setText((obj.getCep()));
            txtEndereco.setText((obj.getEndereco()));
            txtNumero.setText(String.valueOf(obj.getNumero()));
            txtComplemeto.setText((obj.getComplemto()));
            txtBairro.setText((obj.getBairro()));
            txtCidade.setText((obj.getCidade()));
            BoxUf.setSelectedItem((obj.getUf()));
        } else {
            JOptionPane.showMessageDialog(null, "Cliente não encontrado !! ");

        }


    }                                        

    private void btnNOVOActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // botao novo
        new Utilitarios().LimpaTela(painel_dados);
    }                                       

    private void BtnBuscarEmailActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // Botao pesquisar por email
       
        String Email = txtEmail.getText();
        Clientes obj1 = new Clientes();
        ClientesDAO dao = new ClientesDAO();

        obj1 = dao.consultaClientePorEmail(Email);
        //exibir os dados obj nos campos de texto
        if (obj1.getEmail() != null) {

            txtCodigo.setText(String.valueOf(obj1.getId()));
            txtNome.setText((obj1.getNome()));
            txtRg.setText((obj1.getRg()));
            txtCpf.setText((obj1.getCpf()));
            txtEmail.setText((obj1.getEmail()));
            txtTelefone.setText((obj1.getTelefone()));
            txtCelular.setText((obj1.getCelular()));
            txtCep.setText((obj1.getCep()));
            txtEndereco.setText((obj1.getEndereco()));
            txtNumero.setText(String.valueOf(obj1.getNumero()));
            txtComplemeto.setText((obj1.getComplemto()));
            txtBairro.setText((obj1.getBairro()));
            txtCidade.setText((obj1.getCidade()));
            BoxUf.setSelectedItem((obj1.getUf()));
        } else {
            JOptionPane.showMessageDialog(null, "Cliente não encontrado !! ");

        }
    }                                              

